{
  "analysis": {
    "analyzer": {
      "latin": {
        "tokenizer": "keyword",
        "filter": [
          "latinTransform"
        ]
      },
      "cyrillic": {
        "tokenizer": "keyword",
        "filter": [
          "cyrillicTransform"
        ]
      },
      "autocomplete": {
        "tokenizer": "autocomplete",
        "filter": [
          "lowercase"
        ]
      },
      "autocomplete_search": {
        "tokenizer": "lowercase"
      }
    },
    "filter": {
      "cyrillicTransform": {
        "type": "icu_transform",
        "id": "Any-Cyrillic; NFD; [:Nonspacing Mark:] Remove; NFC"
      },
      "latinTransform": {
        "type": "icu_transform",
        "id": "Any-Latin; NFD; [:Nonspacing Mark:] Remove; NFC"
      }
    },
    "tokenizer": {
      "autocomplete": {
        "type": "edge_ngram",
        "min_gram": 2,
        "max_gram": 20,
        "token_chars": [
          "letter",
          "digit"
        ]
      }
    }
  }
}